pipeline{
    agent { label'node1' }
    triggers { pollSCM('* * * * *') }
    stages {
        stage ('vcs'){
            steps {
                git url: 'https://github.com/jayainjeti/spring-petclinic.git',
                    branch: 'develop'
            }
        }
        stage ('downloading jar file from s3 '){
            steps {
                sh 'wget https://jayachandra.s3.ap-south-1.amazonaws.com/spring-petclinic-3.0.0.jar'
                sh 'sudo cp spring.service /etc/systemd/system/'
                sh 'cat spring.service'
                sh 'sudo systemctl enable spring.service'
            }
        }
    }
    
}